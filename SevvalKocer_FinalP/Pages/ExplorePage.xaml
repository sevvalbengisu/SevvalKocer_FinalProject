<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="SevvalKocer_FinalP.Pages.ExplorePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Explore">

    <Grid BackgroundColor="Black">
        <Image Source="earth.jpeg"
               Aspect="AspectFit"
               Opacity="0.95" />
        
        <VerticalStackLayout
            VerticalOptions="Center"
            HorizontalOptions="Center"
            Spacing="12"
            Padding="18">

            <Label Text="Discover foods around the world!"
                   HorizontalTextAlignment="Center"
                   FontAttributes="Bold"
                   FontSize="18"
                   TextColor="White"/>
            
            <Frame
                BackgroundColor="White"
                CornerRadius="14"
                Padding="14"
                HasShadow="True"
                WidthRequest="320">

                <Grid ColumnDefinitions="*,Auto" VerticalOptions="Center">
                    
                    <Label x:Name="SelectedCountryLabel"
                           Text="Select a country"
                           FontSize="16"
                           TextColor="Black"
                           VerticalTextAlignment="Center" />
                    
                    <Label Grid.Column="1"
                           Text="â–¾"
                           FontSize="20"
                           TextColor="Black"
                           VerticalTextAlignment="Center"
                           Margin="10,0,0,0" />
                </Grid>
                
                <Frame.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnPickerTap"/>
                </Frame.GestureRecognizers>
            </Frame>
            
            <Picker x:Name="CountryPicker"
                    IsVisible="False"
                    SelectedIndexChanged="OnCountryChanged" />

            <Button x:Name="GoButton"
                    Text="Go"
                    IsEnabled="False"
                    Clicked="OnGoClicked"
                    CornerRadius="12"
                    HeightRequest="46" />
        </VerticalStackLayout>
    </Grid>
</ContentPage>
