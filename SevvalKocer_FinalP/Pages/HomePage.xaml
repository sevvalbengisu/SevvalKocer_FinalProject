<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SevvalKocer_FinalP.Pages.HomePage"
             Title="Home">

    <Grid Padding="24" RowDefinitions="Auto,*,Auto" RowSpacing="16">

        <Label Text="What should we eat?"
               FontSize="28"
               FontAttributes="Bold"
               HorizontalOptions="Center" />

        
        <Grid Grid.Row="1" HorizontalOptions="Center" VerticalOptions="Center">
           
            <Image x:Name="WheelImage"
                   Source="spin.png"
                   HeightRequest="280"
                   WidthRequest="280"
                   Aspect="AspectFit" />

            
            <Label Text="â–¼"
                   FontSize="24"
                   HorizontalOptions="Center"
                   VerticalOptions="Start"
                   Margin="0,-14,0,0"/>
        </Grid>

        <Button Grid.Row="2"
                x:Name="SpinButton"
                Text="SPIN"
                Clicked="OnSpinClicked"
                FontSize="18"
                CornerRadius="16"
                HeightRequest="52" />

    </Grid>
</ContentPage>