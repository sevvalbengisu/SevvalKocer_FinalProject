<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="SevvalKocer_FinalP.Pages.FoodPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Food">
    
    <Grid RowDefinitions="Auto,*" Padding="12" RowSpacing="12">
        
        <Grid Grid.Row="0" ColumnDefinitions="Auto,*" VerticalOptions="Start">
            
            <Frame Padding="0"
                   WidthRequest="40"
                   HeightRequest="40"
                   CornerRadius="20"
                   BackgroundColor="White"
                   HasShadow="False"
                   VerticalOptions="Center"
                   HorizontalOptions="Start">

                <Label Text="â€¹"
                       FontSize="28"
                       TextColor="Black"
                       HorizontalTextAlignment="Center"
                       VerticalTextAlignment="Center">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnBackClicked"/>
                    </Label.GestureRecognizers>
                </Label>
            </Frame>
            
            <VerticalStackLayout Grid.Column="1"
                                 Spacing="6"
                                 HorizontalOptions="Center"
                                 VerticalOptions="Center">
                <Label x:Name="CountryTitle"
                       Text="Top Foods"
                       FontSize="22"
                       FontAttributes="Bold"
                       HorizontalTextAlignment="Center" />
                <Label Text="Top 10 famous dishes"
                       TextColor="Gray"
                       HorizontalTextAlignment="Center" />
            </VerticalStackLayout>

        </Grid>
        
        <CollectionView x:Name="FoodList"
                        Grid.Row="1"
                        ItemsLayout="VerticalList"
                        Margin="0"
                        HorizontalScrollBarVisibility="Never">

            <CollectionView.ItemTemplate>
                <DataTemplate>
                    
                    <Grid Padding="6,0">
                        <Frame CornerRadius="18"
                               HasShadow="True"
                               Padding="14"
                               Margin="0,0,0,12"
                               HorizontalOptions="Fill"
                               VerticalOptions="Start">

                            <VerticalStackLayout Spacing="8"
                                                 HorizontalOptions="Fill">
                                
                                <Label Text="{Binding Name}"
                                       FontSize="18"
                                       FontAttributes="Bold"
                                       LineBreakMode="TailTruncation"
                                       MaxLines="1" />

                               
                                <Label Text="{Binding Ingredients}"
                                       TextColor="Gray"
                                       LineBreakMode="WordWrap"
                                       MaxLines="2" />

                               
                                <Frame BackgroundColor="#F2F2F2"
                                       CornerRadius="12"
                                       Padding="10"
                                       HasShadow="False"
                                       HorizontalOptions="Fill">

                                    <Label Text="{Binding PopularRestaurant}"
                                           FontAttributes="Bold"
                                           LineBreakMode="TailTruncation"
                                           MaxLines="1" />
                                </Frame>

                            </VerticalStackLayout>
                        </Frame>
                    </Grid>

                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </Grid>
</ContentPage>
